@model codeweb.Models.OrderPro

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Do you want to delete this order</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.NameCus)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NameCus)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AddressDelivery)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AddressDelivery)
        </dd>
    </dl>
    <h3>Products in this order:</h3>
    <ul>
        @foreach (var item in Model.OrderDetails)
        {
            <li>@item.Product.NamePro, Quantity: @item.Quantity</li>
        }
    </ul>

    @using (Html.BeginForm("OrdersManagement", "AdminPanel", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Del" class="btn btn-warning" />
        </div>
    }
</div>

